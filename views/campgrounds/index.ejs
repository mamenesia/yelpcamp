<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View all our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary brn-lg" href="/campgrounds/new">Add new campground</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds!</h3>
    </div>
  </div>

  <div class="row text-center d-flex flex-wrap">
    <% campgrounds.forEach((campground) => { %>
        <div class=" col-lg-3 col-md-4 col-sm-6">
          <div class="card my-3">
            <img src="<%= campground.image%>" class="card-img-top" alt="Campground Image">
            <div class="card-body">
              <h4 class="card-title"><%= campground.name %></h4>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </div>
          </div>
        </div>
        
    <%});%>
  </div>



</div>


  <% include ../partials/footer %>