<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Campground 1</li>
        <li class="list-group-item">Camground 2</li>
        <li class="list-group-item">Campground 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="figure img-thumbnail">
        <img class="figure-img img-fluid rounded" src="<%= campground.image %>" alt="<%= campground.name %> image">
        <div class="figure-caption">
          <h4 class="float-right">$9.00/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
        </div>
      </div>
      <div class="card bg-light my-3">
        <div class="text-right m-3">
          <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add New Comment</a>
        </div>
        <div class="card-body">
          <div class="row">
          <% campground.comments.forEach((comment) => { %>
            <div class="col-md-12">
              <strong><%= comment.author %></strong>
              <span class="float-right">10 days ago</span>
              <p><%=comment.text %></p>
            </div>
          <% }); %>
          </div
        </div>
      </div>
    </div>
  </div>
</div>







<% include ../partials/footer %> 